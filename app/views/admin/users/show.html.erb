<h1 class="admin-title">アカウント詳細</h1>

<div class="show-wrapper">
  <table class="show-table">
    <tr>
      <th>アカウント名</th>
      <td><%= @user.name %></td>
      <td><%= link_to edit_admin_user_path(@user, field: "name"), class: "btn-edit-icon", title: "編集" do %>
        <i class="fas fa-pen"></i>
      <% end %></td>
    </tr>
    <tr>
      <th>ユーザーID</th>
      <td><%= @user.user_id %></td>
      <td><%= link_to edit_admin_user_path(@user, field: "user_id"), class: "btn-edit-icon", title: "編集" do %>
        <i class="fas fa-pen"></i>
      <% end %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
      <td><%= link_to edit_admin_user_path(@user, field: "email"), class: "btn-edit-icon", title: "編集" do %>
        <i class="fas fa-pen"></i>
      <% end %></td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td>********</td>
      <td><%= link_to edit_admin_user_path(@user, field: "password"), class: "btn-edit-icon", title: "編集" do %>
        <i class="fas fa-pen"></i>
      <% end %></td>
    </tr>
    <tr>
  <th>権限</th>
  <td><%= @user.role.present? ? I18n.t("enums.user.role.#{@user.role}") : "未設定" %></td>
  <td><%= link_to edit_admin_user_path(@user, field: "role"), class: "btn-edit-icon", title: "編集" do %>
    <i class="fas fa-pen"></i>
  <% end %></td>
</tr>
  </table>

  <div class="back-button">
  <%= link_to "戻る", admin_users_path, class: "btn-back" %>
  <%= link_to admin_user_path(@user),
              data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
              class: "btn-delete" do %>
    <i class="fas fa-trash-alt"></i> アカウント削除
  <% end %>
</div>


