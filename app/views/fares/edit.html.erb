<h1 class="form-title">運賃編集</h1>

<div class="back-button">
  <%= link_to "戻る", fares_path, class: "btn-back" %>
</div>

<div class="form-wrapper">
  <%= form_with model: @fare, local: true do |form| %>
    <div>
      <%= form.label :departure, "出発地" %>
      <%= form.text_field :departure, required: true, class: "form-control", placeholder: "例：東京" %>
    </div>

    <div>
      <%= form.label :departure_furigana, "出発地ふりがな" %>
      <%= form.text_field :departure_furigana, class: "form-control", placeholder: "例：あらいAAとまこまい" %>
    </div>

    <div>
      <%= form.label :arrival, "到着地" %>
      <%= form.text_field :arrival, required: true, class: "form-control", placeholder: "例：大阪" %>
    </div>

    <div>
      <%= form.label :arrival_furigana, "到着地ふりがな" %>
      <%= form.text_field :arrival_furigana, class: "form-control", placeholder: "例：さっぽろしちゅうおうく" %>
    </div>

    <div class="input-with-unit">
      <%= form.label :distance, "距離" %>
      <div class="unit-field">
        <%= form.number_field :distance, step: 0.1, required: true, class: "form-control" %>
        <span class="unit">km</span>
      </div>
    </div>

    <div class="input-with-unit">
      <%= form.label :fare_small, "小型料金" %>
      <div class="unit-field">
        <%= form.number_field :fare_small, required: true, class: "form-control", placeholder: "30000" %>
        <span class="unit">円</span>
      </div>
    </div>

    <div class="input-with-unit">
      <%= form.label :fare_medium, "中型料金" %>
      <div class="unit-field">
        <%= form.number_field :fare_medium, required: true, class: "form-control", placeholder: "40000" %>
        <span class="unit">円</span>
      </div>
    </div>

    <div class="input-with-unit">
      <%= form.label :fare_large, "大型料金" %>
      <div class="unit-field">
        <%= form.number_field :fare_large, required: true, class: "form-control", placeholder: "50000" %>
        <span class="unit">円</span>
      </div>
    </div>

    <div class="action-buttons">
      <%= form.submit "更新する", class: "btn-submit" %>
    </div>
  <% end %>
</div>

<style>
  .form-title {
    text-align: center;
    font-size: 1.8rem;
    margin: 2rem 0;
    color: #2c3e50;
    font-weight: bold;
    font-family: "Noto Sans JP", sans-serif;
  }

  .back-button {
    max-width: 600px;
    margin: 0 auto 1.5rem auto;
  }

  .btn-back {
    text-align: center;
    background-color: #4b5866;
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    font-weight: bold;
    font-size: 1rem;
    display: inline-block;
    min-width: 100px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .btn-back:hover {
    background-color: #3a454f;
  }

  .form-wrapper {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem;
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  label {
    font-weight: bold;
    display: block;
    margin-bottom: 0.4rem;
    color: #2c3e50;
  }

  .form-control {
    width: 100%;
    padding: 0.6rem 0.8rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    margin-bottom: 1.2rem;
    box-sizing: border-box;
  }

  .input-with-unit {
    margin-bottom: 1.2rem;
  }

  .unit-field {
    display: flex;
    align-items: center;
  }

  .unit-field .form-control {
    flex: 1;
    margin-bottom: 0;
  }

  .unit {
    margin-left: 0.5rem;
    font-weight: bold;
    color: #2c3e50;
  }

  .action-buttons {
    text-align: center;
    margin-top: 2rem;
  }

  .btn-submit {
    background-color: #2c3e50;
    color: white;
    padding: 0.7rem 1.5rem;
    font-size: 1.1rem;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .btn-submit:hover {
    background-color: rgb(219, 216, 52);
    color: black;
    font-weight: bold;
  }
</style>
